extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    .container.col-md-offset-3.col-md-6
        form.form-horizontal(action=product?"/admin/edit-product":"/admin/add-product", method="POST") 
            if product
                input(type="hidden", name="productId", value=(product ? product.id : ""))
            .form-group
                label.col-sm-2.control-label(for="title") Title
                .col-sm-10
                    input.form-control(type="text", name="title", id='title', value=(product ? product.title : ''))
            .form-group
                label.col-sm-2.control-label(for="imageUrl") Image URL
                .col-sm-10
                    input.form-control(type="text", name="imageUrl", id='imageUrl', value=(product ? product.imageUrl : ""))
            .form-group
                label.col-sm-2.control-label(for="price") Price
                .col-sm-10
                    input.form-control(type="number", name="price", id='price', step=".01", value=(product ? product.price : "0.0"))
            .form-group
                label.col-sm-2.control-label(for="description") Description
                .col-sm-10
                    textarea.form-control.noresize(name="description", id="description", rows="5") #{value=(product ? product.description : "")}
            .form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-default(type="submit") #{product ? "Update Product" : "Add Product"}