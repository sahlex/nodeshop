extends ../layouts/main-layout.pug 

block styles 
    
block content 
    .container.col-md-offset-3.col-md-6
        if errorMessage
            .row
                .alert.alert-danger.col-12.text-center #{errorMessage}
        form(action="/reset", method="POST") 
            input(type='hidden', name='_csrf', value=csrfToken)
            .form-row.mb-3
                .input-group
                    label.col-sm-3.control-label(for="E-Mail") E-Mail
                    .col-sm-10
                        input.form-control(type="text", name="email", id='email', placeholder="Enter email")
            .form-row.mb-3
                .form-group
                    .col-sm-offset-2.col-12
                        button.btn.btn-primary(type="submit") Reset Password